<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/fragment_video_1"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/album_video1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fragment_video_1_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_video_1"
            android:text="[MV] 라일락\n아이유 (IU)|2021.03.25"
            android:layout_marginStart="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/fragment_video_2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/album_video2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_video_1_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/fragment_video_2_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_video_2"
            android:text="[MV] Coin\n아이유 (IU)|2021.03.26"
            android:layout_marginStart="63dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>


