<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_first_album_default"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_btn_nugu_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_mike"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/btn_main_setting"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매혹적인 음색의 여성 보컬\n팝"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv" />

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@id/home_pannel_title_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_nugu_iv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/pannel_album_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 36곡 2020.06.05"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_title_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In My Bed"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toTopOf="@id/home_pannel_album_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_album_img_iv"/>

        <TextView
            android:id="@+id/home_pannel_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bear"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_album_title_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_album_img_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_album_img_iv"/>


        <TextView
            android:id="@+id/home_pannel_today_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악 "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/home_btn_arrow_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_tv"/>

        <TextView
            android:id="@+id/home_btn_Synthesis_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textSize="15sp"
            android:textColor="@color/purple_500"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@id/home_btn_domestic_tv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_today_tv"/>

        <TextView
            android:id="@+id/home_btn_domestic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="국내"
            android:textSize="15sp"
            android:textColor="@color/gray_color"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@id/home_btn_aborad_tv"
            app:layout_constraintTop_toTopOf="@id/home_pannel_today_tv"/>

        <TextView
            android:id="@+id/home_btn_aborad_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해외"
            android:textSize="15sp"
            android:textColor= "@color/gray_color"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_pannel_today_tv"/>

        <HorizontalScrollView

            android:id="@+id/home_today_music_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/home_pannel_today_tv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_tv"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_today_music_01_iv"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/img_album_exp2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <ImageView
                        android:id="@+id/home_today_music_play_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/widget_black_play"
                        app:layout_constraintEnd_toEndOf="@id/home_today_music_01_iv"
                        app:layout_constraintBottom_toBottomOf="@id/home_today_music_01_iv"/>


                    <TextView
                        android:id="@+id/home_album_name1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="라일락"
                        android:textSize="15sp"
                        android:textColor= "@color/black"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/home_today_music_01_iv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_01_iv"/>

                    <TextView
                        android:id="@+id/home_album_singer1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iU(아이유)"
                        android:textSize="15sp"
                        android:textColor= "@color/gray_color"
                        app:layout_constraintTop_toBottomOf="@id/home_album_name1_tv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_01_iv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/home_today_music_02_iv"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/img_album_exp3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <TextView
                        android:id="@+id/home_album_name2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEXT LEVEL"
                        android:textSize="15sp"
                        android:textColor= "@color/black"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/home_today_music_02_iv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_02_iv"/>


                    <TextView
                        android:id="@+id/home_album_singer2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="aespa(에스파)"
                        android:textSize="15sp"
                        android:textColor= "@color/gray_color"
                        app:layout_constraintTop_toBottomOf="@id/home_album_name2_tv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_02_iv"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/home_today_music_03_iv"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/img_album_exp4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <TextView
                        android:id="@+id/home_album_name3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="작은것들의 시"
                        android:textSize="15sp"
                        android:textColor= "@color/black"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/home_today_music_03_iv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_03_iv"/>


                    <TextView
                        android:id="@+id/home_album_singer3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTS"
                        android:textSize="15sp"
                        android:textColor= "@color/gray_color"
                        app:layout_constraintTop_toBottomOf="@id/home_album_name3_tv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_03_iv"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <ImageView
                        android:id="@+id/home_today_music_04_iv"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/img_album_exp5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <TextView
                        android:id="@+id/home_album_name4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BAAM"
                        android:textSize="15sp"
                        android:textColor= "@color/black"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/home_today_music_04_iv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_04_iv"/>


                    <TextView
                        android:id="@+id/home_album_singer4_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모모랜드"
                        android:textSize="15sp"
                        android:textColor= "@color/gray_color"
                        app:layout_constraintTop_toBottomOf="@id/home_album_name4_tv"
                        app:layout_constraintStart_toStartOf="@id/home_today_music_04_iv"/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </HorizontalScrollView>



        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_banner_vp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/img_home_viewpager_exp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_today_music_layout"/>



    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>