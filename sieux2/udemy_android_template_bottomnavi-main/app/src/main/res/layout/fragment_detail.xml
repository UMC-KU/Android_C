<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_albumname_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범명"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/detail_artist_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아티스트"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/detail_albumname_title_tv"
                app:layout_constraintStart_toStartOf="@id/detail_albumname_title_tv"/>

            <TextView
                android:id="@+id/detail_balme_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발매사"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/detail_artist_title_tv"
                app:layout_constraintStart_toStartOf="@id/detail_albumname_title_tv"/>

            <TextView
                android:id="@+id/detail_agency_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기획사"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/detail_balme_title_tv"
                app:layout_constraintStart_toStartOf="@id/detail_albumname_title_tv" />

            <TextView
                android:id="@+id/detail_introduce_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범소개"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/detail_agency_title_tv"
                app:layout_constraintStart_toStartOf="@id/detail_albumname_title_tv" />

            <TextView
            android:id="@+id/detail_albumname1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lU 5th Album 'LILAC'"
            android:textSize="10sp"
            android:textColor="@color/gray_color"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/detail_albumname_title_tv"
            app:layout_constraintTop_toTopOf="@id/detail_albumname_title_tv" />

            <TextView
                android:id="@+id/detail_artist1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU)"
                android:textSize="10sp"
                android:textColor="@color/gray_color"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/detail_balme_title_tv"
                app:layout_constraintTop_toTopOf="@id/detail_artist_title_tv" />

            <TextView
                android:id="@+id/detail_balme1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오엔터테인먼트"
                android:textSize="10sp"
                android:textColor="@color/gray_color"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/detail_balme_title_tv"
                app:layout_constraintTop_toTopOf="@id/detail_balme_title_tv"/>

            <TextView
                android:id="@+id/detail_agency1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDAM엔터테인먼트"
                android:textSize="10sp"
                android:textColor="@color/gray_color"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@id/detail_agency_title_tv"
                app:layout_constraintTop_toTopOf="@id/detail_agency_title_tv"/>

            <TextView
            android:id="@+id/detail_introduce1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나리는 꽃가루에 눈이 따끔해 (아야) \눈물이 고여도 꾹 참을래 \내 마음 한켠 비밀스런 오르골에 넣어두고서 \영원히 되감을 순간이니까 우리 둘의 마지막 페이지를 잘 부탁해 \어느 작별이 이보다 완벽할까 Love me only till this spring \오 라일락 꽃이 지는 날 good bye 이런 결말이 어울려 안녕 \꽃잎 같은 안녕 하이얀 우리 봄날의 climax \아 얼마나 기쁜 일이야 Ooh ooh Love me only till this spring \봄바람처럼"
            android:textSize="10sp"
            android:textColor="@color/gray_color"
                android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/detail_introduce_title_tv"
            app:layout_constraintTop_toBottomOf="@id/detail_introduce_title_tv"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>